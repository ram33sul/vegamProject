        <script>
            let xhr = new XMLHttpRequest();
            let couponIdG;
            function qtyMinus(productId,price){
                let prevQty = document.getElementById('qtyView'+productId).innerHTML;
                xhr.open('GET','quantityMinus?id='+productId,false)
                xhr.send();
                if(xhr.status == 200){
                    let data = JSON.parse(xhr.responseText);
                    document.getElementById('qtyView'+productId).innerHTML=data.quantity;
                    cancelCoupon();
                    if(prevQty!=data.quantity){
                        cartSubPrices(price,'minus');
                    }
                }
            }

            function qtyPlus(productId,price){
                let prevQty = document.getElementById('qtyView'+productId).innerHTML;
                xhr.open('GET','quantityPlus?id='+productId,false)
                xhr.send();
                if(xhr.status == 200){
                    let data = JSON.parse(xhr.responseText);
                    document.getElementById('qtyView'+productId).innerHTML=data.quantity;
                    cancelCoupon();
                    if(prevQty!=data.quantity){
                        cartSubPrices(price,'plus');
                    }
                }
            }

            function removeFromCart(productId){
                xhr.open('GET','removeCart?id='+productId,false)
                xhr.send();
                if(xhr.status == 200){
                    document.getElementById('productCard'+productId).style.display='none';
                    cancelCoupon();
                }
            }
            
            function cartSubPrices(ChangedPrice,type){
                ChangedPrice = parseFloat(ChangedPrice);
                let totalPrice = parseFloat(document.getElementById('total_').getAttribute("data-totalPrice"));
                if(type=='plus'){
                    totalPrice = totalPrice + ChangedPrice;
                }
                else{
                    totalPrice = totalPrice - ChangedPrice;
                }
                let gst = (totalPrice * 5 / 100);
                let deliveryCharge = 50;
                let total = (totalPrice + gst + deliveryCharge).toFixed(2);
                document.getElementById('gst').innerHTML='₹'+gst.toFixed(2);
                document.getElementById('totalAmount').innerHTML='₹'+total;
                document.getElementById('total_').setAttribute("data-totalPrice",totalPrice);
            }

            function applyCoupon(couponId,couponName,couponValue){
                xhr.open('GET','applyCoupon?id='+couponId,false);
                xhr.send();
                if(xhr.status == 200){
                    document.getElementById('couponInput').value=couponName;
                    document.getElementById('couponList').style.display="none";
                    document.getElementById('applyCouponBtn'+couponId).style.display='none';
                    document.getElementById('applyBtn').innerHTML='CHANGE';
                    couponIdG = couponId;
                }
            }

            let showCouponList = function () {
                let i=0;
                return () => {
                    if(i==0){
                        document.getElementById('couponList').style.display="";
                        i=1;
                    }
                    else {
                        document.getElementById('couponList').style.display="none";
                        i=0;
                    }
                }
            }()
            function cancelCoupon(){
                document.getElementById('couponInput').value="COUPON NOT APPLIED"
                document.getElementById('applyBtn').innerHTML='APPLY';
                if(couponIdG){
                    document.getElementById('applyCouponBtn'+couponIdG).style.display='';
                }
            }
        </script>