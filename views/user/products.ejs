<script>
    let sizeSelect = function (){
        let prevSize;
        return (size,productId) => {
            document.getElementById("size"+productId).setAttribute("data-value",size);
            let sizeButton = document.getElementById(size+productId);
            if(prevSize){
                prevSize.style.backgroundColor = 'white';
                prevSize.style.color = 'black';
            }
            sizeButton.style.backgroundColor = 'black';
            sizeButton.style.color = 'white';
            prevSize = sizeButton;
        }
    }();

    function addToCart(productId){
        let sizeValue = document.getElementById("size"+productId).getAttribute("data-value")
        if(sizeValue=='none'){
            alert("please select a size");
        } else {
            let xhr = new XMLHttpRequest();
            xhr.open('GET','addToCart?id='+productId+'&size='+sizeValue,false);
            xhr.send();
                if(xhr.status === 200){
                    let data = JSON.parse(xhr.responseText);
                    if(data.status){
                        alert("added to cart successfully");
                    } else {
                        alert("already in cart");
                    }
                    let addToCartBtn = document.getElementById('addToCartBtn'+productId);
                    addToCartBtn.innerHTML= 'ALREADY IN CART';
                    let addToCartBtn2 = document.getElementById('addToCartBtn2'+productId);
                    addToCartBtn2.style.backgroundColor = 'gray';
                    addToCartBtn2.setAttribute("onclick",'');
                }
        }
    }

    function addToCartNotLogged(){
        window.location.href = "login";
    }

    function sort(){
        window.location.href = "products?sortby="+document.getElementById('sortby').value;
    }

    document.getElementById('<%= sortby %>').setAttribute("selected","selected");

</script>